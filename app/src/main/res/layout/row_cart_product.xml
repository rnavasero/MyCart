<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_row_product">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">


            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/img_row_cart_product"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                tools:ignore="ContentDescription,InefficientWeight"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    tools:ignore="RtlSymmetry">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_row_cart_product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/product_1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/tv_unit_price"
                            android:paddingEnd="15dp"
                            android:text="@string/php_24_00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_row_cart_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/your_description_here"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                    <LinearLayout
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlHardcoded">

                        <Button
                            android:textSize="9sp"
                            android:id="@+id/btn_minus_row_cart"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:clickable="true"
                            android:text="@string/minus"
                            android:focusable="true"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:textAlignment="center"
                            android:id="@+id/tv_qty_row_cart"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                        <Button
                            android:textSize="9sp"
                            android:id="@+id/btn_add_row_cart"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:clickable="true"
                            android:text="@string/plus"
                            android:focusable="true"
                            tools:ignore="SmallSp" />

                        <LinearLayout

                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlHardcoded">

                        <TextView
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/php"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp" />
                        <TextView
                            android:paddingEnd="15dp"
                            android:gravity="center"
                            android:id="@+id/tv_total_price_row_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="@string/_00_00"
                            android:textSize="12sp"
                            tools:ignore="RtlSymmetry" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                        <TextView
                            android:textStyle="bold"
                            android:paddingStart="15dp"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_delete_cart_item"
                            android:text="@string/delete"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>
